FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY pyproject.toml README.md ./
COPY src ./src
COPY data ./data

RUN pip install --upgrade pip && pip install --no-cache-dir .

EXPOSE 8000
CMD ["uvicorn", "youtube_success_ml.api.fastapi_app:app", "--host", "0.0.0.0", "--port", "8000"]
